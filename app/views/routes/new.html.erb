<div class="container">
<div class="row">
<div class="d-flex justify-content-center">
<div class="col-lg-2 my-6"></div>

<div class="form-inputs">
<h2>Workout of the day</h2>
<%= simple_form_for(@route) do |f| %>
  <%= f.input :start_address,
    input_html: {data: {address_autocomplete_target: "start_address"}, class: "d-none"},
    wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV['MAPBOX_API_KEY']}} %>
  <%= f.input :end_address,
    input_html: {data: {address_autocomplete_target: "end_address"}, class: "d-none"},
    wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV['MAPBOX_API_KEY']}} %>
  <%= f.submit class: "btn btn-flat btn-wide" %>
<% end %>
</div>
</div>
</div>
</div>
