<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @steps_as_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <%= link_to 'New Route', new_route_path, class: 'btn btn-flat my-4' %>


  <h1 class="my-2"><%= @run.route.name %></h1>
  <p><strong>Description:</strong> <%= @run.route.description %></p>
  <p><strong>Distance:</strong> <%= @run.route.distance %> km</p>
  <p><strong>Comments:</strong> <%= @bookmark.comment %></p>


  <div id="carouselExample" class="carousel slide">
    <div class="carousel-inner">
      <% @bookmark.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>" >
        <%= cl_image_tag photo.key, class: "d-block w-100" %>
      </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
