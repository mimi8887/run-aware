
<div class="container">
<div class="row">
<div class="col-lg-4 my-6">

<div class="form-inputs-new">



<h1>Your route has finished!</h1>
<h2>Summary</h2>
<p>Distance : </p>
<p>Total time : <%= Time.at(@run.ending_time - @run.starting_time).utc.strftime("%H:%M:%S") %></p>
<p>Pace : km</p>
<p>Upload a picture :</p>
<%= simple_form_for [ @run, @bookmark ] do |f| %>
  <%= f.input :comment, placeholder: "Enter your comment here", as: :text, input_html: { rows: "10" }, input_html: { class: "custom-form-input" } %>
  <%= f.input :photos, as: :file, input_html: { class: "custom-form-input-new", multiple: true } %>
  <%= f.button :submit, "Favorite the Route", class: "btn-flat" %>
<% end %>
</div>
</div>
</div>
</div>

