
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-3 my-6">
      <div class="form-inputs">
        <h2>Workout of the day</h2>
        <%= simple_form_for(@route) do |f| %>
        <%= f.input :start_address, input_html: { class: "custom-form-input" } %>
        <%= f.input :end_address, input_html: { class: "custom-form-input" } %>
        <%= f.submit class: "btn btn-flat btn-wide", id:"submit-button"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
