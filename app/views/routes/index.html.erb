
<div style="position: relative; width: 100%; height: 600px;">
  <div style="width: 100%; height: 100%;"
    data-controller="map"
    data-map-markers-value="<%= @array %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <!-- button positioned at the bottom -->
  <%= link_to 'New Route', new_route_path, class: 'btn btn-flat-newroute', style: 'position: absolute; bottom: 20px; left: 20%; transform: translateX(-9%); z-index: 20;' %>
</div>

<h1 class="my-3">Suggestions</h1>
<div class="cards_container">
  <% @routes.each do |route| %>
      <div class="card-run">
        <%= image_tag "map.png",  width: 124, crop: :fill, class: "image-card" %>
        <div class="card-run-infos">
          <h2><%= link_to route.name, route_path(route) %></h2>
          <div class="card-text-icon">
            <i class="fa-solid fa-person-running"></i>
            <p><strong>Distance:</strong> <%= route.distance %> km</p>
          </div>
          <p><%= route.description %></p>
        </div>
      </div>
  <% end %>
</div>
